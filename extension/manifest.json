{
    "manifest_version": 2,
    "name": "hard-pass",
    "version": "0.3",

    "description":  "Device-based password manager",
    "icons": {
        "48": "icons/hard-pass-48.png"
    },

    "permissions": [
        "activeTab"
    ],

    "browser_action": {
        "default_icon": "icons/hard-pass-32.png",
        "default_title": "hard-pass",
        "default_popup": "popup/hard-pass.html"
    }
}
